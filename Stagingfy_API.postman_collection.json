{
  "info": {
    "name": "Stagingfy API",
    "description": "Coleção completa da API do Stagingfy",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up (Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"User Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/sign-up/email",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sign-up", "email"]
            }
          }
        },
        {
          "name": "Sign In (Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/sign-in/email",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sign-in", "email"]
            }
          }
        },
        {
          "name": "Sign Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/sign-out",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sign-out"]
            }
          }
        },
        {
          "name": "Get Session",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/session",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "session"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        },
        {
          "name": "Google OAuth Sign In",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/sign-in/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sign-in", "google"]
            }
          }
        },
        {
          "name": "Google OAuth Callback",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/callback/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "callback", "google"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/user/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "user", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"email\": \"updated@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/user/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "user", "profile"]
            }
          }
        },
        {
          "name": "Delete Account",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/user/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "user", "profile"]
            }
          }
        },
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/user/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "user", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "File Upload",
      "item": [
        {
          "name": "Upload Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/upload/image",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "upload", "image"]
            }
          }
        },
        {
          "name": "Generate Presigned URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileName\": \"example.jpg\",\n  \"fileType\": \"image/jpeg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/upload/presigned-url",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "upload", "presigned-url"]
            }
          }
        },
        {
          "name": "Generate Presigned Download URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"key\": \"path/to/file.jpg\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/upload/presigned-download-url",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "upload", "presigned-download-url"]
            }
          }
        },
        {
          "name": "Delete Image",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/upload/image/{{imageKey}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "upload", "image", "{{imageKey}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Stripe Payments",
      "item": [
        {
          "name": "Create Checkout Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"priceId\": \"price_1234567890\",\n  \"successUrl\": \"https://yourapp.com/success\",\n  \"cancelUrl\": \"https://yourapp.com/cancel\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/create-checkout-session",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "create-checkout-session"]
            }
          }
        },
        {
          "name": "Create Portal Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"returnUrl\": \"https://yourapp.com/dashboard\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/create-portal-session",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "create-portal-session"]
            }
          }
        },
        {
          "name": "Get Subscription",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/subscription",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "subscription"]
            }
          }
        },
        {
          "name": "Cancel Subscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/cancel-subscription",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "cancel-subscription"]
            }
          }
        },
        {
          "name": "Reactivate Subscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/reactivate-subscription",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "reactivate-subscription"]
            }
          }
        },
        {
          "name": "Get Invoices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/invoices?limit=10&starting_after=",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "invoices"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "starting_after",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Get Prices",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/prices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "prices"]
            }
          }
        },
        {
          "name": "Stripe Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "stripe-signature",
                "value": "webhook_signature_here"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"evt_1234567890\",\n  \"object\": \"event\",\n  \"type\": \"customer.subscription.created\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/stripe/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "stripe", "webhook"]
            }
          }
        }
      ]
    }
  ]
}